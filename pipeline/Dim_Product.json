{
	"name": "Dim_Product",
	"properties": {
		"activities": [
			{
				"name": "Dim_Product",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "."
					},
					{
						"name": "Destination",
						"value": "anayticscontainer//Dim_Date"
					}
				],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "WITH Dim_Customer AS(\n    select \n        CustomerID\n        ,TRIM(ISNULL(Title,'')+ ' ' + ISNULL(FirstName,'') + ' ' + ISNULL(MiddleName,'') + ' ' + ISNULL(LastName,'') + ' ' +  ISNULL(Suffix,'')) as NameCustomer\n        ,CompanyName\n        ,SalesPerson\n        ,EmailAddress\n        ,Phone\n        --,Title,FirstName , MiddleName ,LastName,  Suffix\n        from SalesLT.Customer\n)\nselect * from Dim_Customer",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": true,
					"stagingSettings": {
						"linkedServiceName": {
							"referenceName": "AzureDataLakeStorage1",
							"type": "LinkedServiceReference"
						},
						"path": "anayticscontainer"
					},
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "SourceDataset_4j8",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DestinationDataset_4j8",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}